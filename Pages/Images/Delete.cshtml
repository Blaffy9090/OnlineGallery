@page "{id:int}"
@model OnlineGallery.Pages.Images.DeleteModel
@{
    ViewData["Title"] = "Удаление изображения";
}

<h2>Удаление изображения</h2>

@if (Model.ImageItem != null)
{
    <p>Вы уверены, что хотите удалить это изображение?</p>

    <div>
        <strong>@Model.ImageItem.Title</strong><br />

        @if (!string.IsNullOrEmpty(Model.ImageItem.FileName))
        {
            <img src="~/uploads/@Model.ImageItem.FileName" alt="@Model.ImageItem.Title" width="300" />
        }
        else
        {
            <p><em>Файл изображения отсутствует.</em></p>
        }
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-page="Index" class="btn btn-secondary">Отмена</a>
    </form>
}
else
{
    <p><em>Изображение не найдено.</em></p>
}